<form class="form-horizontal" action="" method="post" id="contactform">
  <div id="jscontactform-messages"></div>

  {% if status %}
  <div class="alert alert-{{ alertclass }}" role="alert">
    {{ message }}
  </div>
  {% endif %}

  <!-- Name input-->
  <div class="form-group">
    <label class="col-md-3 control-label" for="name">{{ contactform.fields.name.label }}</label>
    <div class="col-md-9">
      <input id="name" name="name" type="text" placeholder="{{ contactform.fields.name.placeholder }}" class="form-control" />
    </div>
  </div>

  <!-- Email input-->
  <div class="form-group">
    <label class="col-md-3 control-label" for="email">{{ contactform.fields.email.label }}</label>
    <div class="col-md-9">
      <input id="email" name="email" type="text" placeholder="{{ contactform.fields.email.placeholder }}" class="form-control" />
    </div>
  </div>

  <!-- Message body -->
  <div class="form-group">
    <label class="col-md-3 control-label" for="message">{{ contactform.fields.message.label }}</label>
    <div class="col-md-9">
      <textarea class="form-control" id="message" name="message" placeholder="{{ contactform.fields.message.placeholder }}" rows="5"></textarea>
    </div>
  </div>

  <!-- Antispam input-->
  <div class="form-group antispam-div">
    <label class="col-md-3 control-label" for="antispam">{{ contactform.fields.antispam.label }}</label>
    <div class="col-md-9">
      {% if contactform.fields.antispam.subtitle %}
      <em>{{ contactform.fields.antispam.subtitle }}</em>
      {% endif %}
      <input id="antispam" name="antispam" type="text" placeholder="{{ contactform.fields.antispam.placeholder }}" class="form-control" />
    </div>
  </div>

  <!-- Form actions -->
  <div class="form-group">
    <div class="col-md-12 text-right">
      <button type="submit" class="btn btn-primary btn-lg">{{ contactform.fields.submit.label }}</button>
    </div>
  </div>
</form>